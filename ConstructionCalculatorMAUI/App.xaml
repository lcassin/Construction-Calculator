<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionCalculatorMAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Static colors -->
            <Color x:Key="Primary">#1976D2</Color>
            <Color x:Key="PrimaryDark">#90CAF9</Color>
            <Color x:Key="Secondary">#FFC107</Color>
            <Color x:Key="Tertiary">#2B0B98</Color>

            <!-- Theme-aware color resources (updated at runtime by App.xaml.cs) -->
            <Color x:Key="DisplayBackgroundColor">#F5F5F5</Color>
            <Color x:Key="OperatorButtonColor">#FFC864</Color>
            <Color x:Key="SecondaryTextColor">#757575</Color>

            <!-- Global Styles with AppThemeBinding for theme-aware colors -->
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#FFFFFF, Dark=#121212}" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#E0E0E0, Dark=#424242}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="5" />
            </Style>

            <Style x:Key="NumberButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#D0D0D0, Dark=#383838}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="5" />
            </Style>

            <Style x:Key="ActionButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#B3D9FF, Dark=#2C5F8D}" />
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="5" />
            </Style>

            <Style x:Key="OperatorButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#FFC864, Dark=#FF9800}" />
                <Setter Property="TextColor" Value="#000000" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="8" />
            </Style>

            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
                <Setter Property="PlaceholderColor" Value="{AppThemeBinding Light=#7A7A7A, Dark=#B3B3B3}" />
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F5F5F5, Dark=#1E1E1E}" />
            </Style>

            <Style TargetType="ScrollView">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#FFFFFF, Dark=#121212}" />
            </Style>

            <Style TargetType="VerticalStackLayout">
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>

            <Style TargetType="HorizontalStackLayout">
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>

            <Style TargetType="Grid">
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>

            <Style TargetType="RadioButton">
                <Setter Property="TextColor" Value="{AppThemeBinding Light=#000000, Dark=#FFFFFF}" />
            </Style>

            <!-- Primary Button Style for Calculator Actions -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#1976D2, Dark=#90CAF9}" />
                <Setter Property="TextColor" Value="#FFFFFF" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="15,10" />
                <Setter Property="HeightRequest" Value="50" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
