<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConstructionCalculatorMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ConstructionCalculatorMAUI.Pages"
    xmlns:electrical="clr-namespace:ConstructionCalculatorMAUI.Pages.Calculators.Electrical"
    Title="Construction Calculator"
    Shell.BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#121212}"
    Shell.ForegroundColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
    Shell.TitleColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
    Shell.TabBarBackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#121212}"
    Shell.TabBarForegroundColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
    Shell.TabBarUnselectedColor="{AppThemeBinding Light=#616161, Dark=#B3FFFFFF}">

    <!-- 
    Shell provides a flyout menu for navigation between calculators.
    This replaces the Windows Forms "Tools" menu with a mobile-friendly navigation pattern.
    Shell chrome colors are theme-aware using AppThemeBinding.
    -->

    <FlyoutItem Title="Calculators" Icon="calculator.png">
        <ShellContent
            Title="Main Calculator"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
        
        <ShellContent
            Title="Angle Calculator"
            ContentTemplate="{DataTemplate pages:AngleCalculatorPage}"
            Route="AngleCalculator" />
        
        <ShellContent
            Title="Stair Calculator"
            ContentTemplate="{DataTemplate pages:StairCalculatorPage}"
            Route="StairCalculator" />
        
        <ShellContent
            Title="Survey Calculator"
            ContentTemplate="{DataTemplate pages:SurveyCalculatorPage}"
            Route="SurveyCalculator" />
        
        <ShellContent
            Title="Seating Layout"
            ContentTemplate="{DataTemplate pages:SeatingLayoutCalculatorPage}"
            Route="SeatingLayout" />
        
        <ShellContent
            Title="Area Calculator"
            ContentTemplate="{DataTemplate pages:AreaCalculatorPage}"
            Route="AreaCalculator" />
        
        <ShellContent
            Title="Electrical Load Calculator"
            ContentTemplate="{DataTemplate electrical:ElectricalCalculatorPage}"
            Route="ElectricalCalculator" />
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="Settings" />
        
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate pages:AboutPage}"
            Route="About" />
    </FlyoutItem>

</Shell>
