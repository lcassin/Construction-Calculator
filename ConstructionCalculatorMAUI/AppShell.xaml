<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConstructionCalculatorMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ConstructionCalculatorMAUI.Pages"
    xmlns:electrical="clr-namespace:ConstructionCalculatorMAUI.Pages.Calculators.Electrical"
    xmlns:hvac="clr-namespace:ConstructionCalculatorMAUI.Pages.Calculators.HVAC"
    xmlns:plumbing="clr-namespace:ConstructionCalculatorMAUI.Pages.Calculators.Plumbing"
    xmlns:materials="clr-namespace:ConstructionCalculatorMAUI.Pages.Calculators.Materials"
    xmlns:geometry="clr-namespace:ConstructionCalculatorMAUI.Pages.Calculators.Geometry"
    xmlns:unitconverter="clr-namespace:ConstructionCalculatorMAUI.Pages.Calculators.UnitConverter"
    Title="Construction Calculator"
    Shell.BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#121212}"
    Shell.ForegroundColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
    Shell.TitleColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
    Shell.TabBarBackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#121212}"
    Shell.TabBarForegroundColor="{AppThemeBinding Light=#000000, Dark=#FFFFFF}"
    Shell.TabBarUnselectedColor="{AppThemeBinding Light=#616161, Dark=#B3FFFFFF}">

    <!-- 
    Shell provides a flyout menu for navigation between calculators.
    The hub page provides grouped navigation matching the WPF Tools menu structure.
    Shell chrome colors are theme-aware using AppThemeBinding.
    -->

    <!-- Main Calculator (always visible) -->
    <FlyoutItem Title="Main Calculator" Route="MainPage">
        <ShellContent
            Title="Main Calculator"
            ContentTemplate="{DataTemplate pages:MainPage}" />
    </FlyoutItem>

    <!-- Calculator Hub (grouped navigation) -->
    <FlyoutItem Title="All Calculators" Route="CalculatorHub">
        <ShellContent
            Title="All Calculators"
            ContentTemplate="{DataTemplate pages:CalculatorHubPage}" />
    </FlyoutItem>

    <!-- Individual calculator routes (hidden from flyout, accessible via hub) -->
    <ShellContent
        Title="Angle Calculator"
        ContentTemplate="{DataTemplate pages:AngleCalculatorPage}"
        Route="AngleCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Stair Calculator"
        ContentTemplate="{DataTemplate pages:StairCalculatorPage}"
        Route="StairCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Survey Calculator"
        ContentTemplate="{DataTemplate pages:SurveyCalculatorPage}"
        Route="SurveyCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Seating Layout"
        ContentTemplate="{DataTemplate pages:SeatingLayoutCalculatorPage}"
        Route="SeatingLayout"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Area Calculator"
        ContentTemplate="{DataTemplate pages:AreaCalculatorPage}"
        Route="AreaCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="HVAC Multi-Zone Calculator"
        ContentTemplate="{DataTemplate hvac:HVACCalculatorPage}"
        Route="HVACCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Plumbing Calculator"
        ContentTemplate="{DataTemplate plumbing:PlumbingCalculatorPage}"
        Route="PlumbingCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Electrical Load Calculator"
        ContentTemplate="{DataTemplate electrical:ElectricalCalculatorPage}"
        Route="ElectricalCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Paint Calculator"
        ContentTemplate="{DataTemplate materials:PaintCalculatorPage}"
        Route="PaintCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Concrete Calculator"
        ContentTemplate="{DataTemplate materials:ConcreteCalculatorPage}"
        Route="ConcreteCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Drywall Calculator"
        ContentTemplate="{DataTemplate materials:DrywallCalculatorPage}"
        Route="DrywallCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Flooring Calculator"
        ContentTemplate="{DataTemplate materials:FlooringCalculatorPage}"
        Route="FlooringCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Board Feet Calculator"
        ContentTemplate="{DataTemplate materials:BoardFeetCalculatorPage}"
        Route="BoardFeetCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Roofing Calculator"
        ContentTemplate="{DataTemplate materials:RoofingCalculatorPage}"
        Route="RoofingCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Ramp Calculator"
        ContentTemplate="{DataTemplate geometry:RampCalculatorPage}"
        Route="RampCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Grading/Slope Calculator"
        ContentTemplate="{DataTemplate geometry:GradingCalculatorPage}"
        Route="GradingCalculator"
        FlyoutItemIsVisible="False" />
    
    <ShellContent
        Title="Unit Converter"
        ContentTemplate="{DataTemplate unitconverter:UnitConverterPage}"
        Route="UnitConverter"
        FlyoutItemIsVisible="False" />

    <FlyoutItem Title="Settings">
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate pages:SettingsPage}"
            Route="Settings" />
        
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate pages:AboutPage}"
            Route="About" />
    </FlyoutItem>

</Shell>
