<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConstructionCalculatorMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:ConstructionCalculatorMAUI.Pages"
    Title="Construction Calculator">

    <!-- 
    Shell provides a flyout menu for navigation between calculators.
    This replaces the Windows Forms "Tools" menu with a mobile-friendly navigation pattern.
    -->

    <FlyoutItem Title="Calculators" Icon="calculator.png">
        <ShellContent
            Title="Main Calculator"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
        
        <ShellContent
            Title="Angle Calculator"
            ContentTemplate="{DataTemplate pages:AngleCalculatorPage}"
            Route="AngleCalculator" />
        
        <ShellContent
            Title="Stair Calculator"
            ContentTemplate="{DataTemplate pages:StairCalculatorPage}"
            Route="StairCalculator" />
        
        <ShellContent
            Title="Survey Calculator"
            ContentTemplate="{DataTemplate pages:SurveyCalculatorPage}"
            Route="SurveyCalculator" />
        
        <ShellContent
            Title="Seating Layout"
            ContentTemplate="{DataTemplate pages:SeatingLayoutCalculatorPage}"
            Route="SeatingLayout" />
        
        <ShellContent
            Title="Area Calculator"
            ContentTemplate="{DataTemplate pages:AreaCalculatorPage}"
            Route="AreaCalculator" />
    </FlyoutItem>

    <FlyoutItem Title="Settings">
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate pages:AboutPage}"
            Route="About" />
    </FlyoutItem>

</Shell>
