<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionCalculatorMAUI.Pages.SettingsPage"
             Title="Settings">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="Settings"
                   FontSize="28"
                   FontAttributes="Bold" />

            <BoxView HeightRequest="2"
                     Color="{AppThemeBinding Light=#E0E0E0, Dark=#424242}"
                     Margin="0,0,0,10" />

            <Label Text="Theme"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,10,0,5" />

            <Label Text="Choose your preferred color theme"
                   FontSize="14"
                   Margin="0,0,0,10" />

            <VerticalStackLayout Spacing="10">
                <RadioButton x:Name="LightThemeRadio"
                             Content="Light"
                             GroupName="Theme"
                             CheckedChanged="OnThemeChanged" />
                
                <RadioButton x:Name="DarkThemeRadio"
                             Content="Dark"
                             GroupName="Theme"
                             CheckedChanged="OnThemeChanged" />
                
                <RadioButton x:Name="SystemThemeRadio"
                             Content="System Default"
                             GroupName="Theme"
                             CheckedChanged="OnThemeChanged" />
            </VerticalStackLayout>

            <Label Text="The theme will be applied immediately and saved for future sessions."
                   FontSize="12"
                   Margin="0,10,0,0"
                   Opacity="0.7" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
