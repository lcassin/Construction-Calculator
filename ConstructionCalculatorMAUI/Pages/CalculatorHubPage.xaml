<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionCalculatorMAUI.Pages.CalculatorHubPage"
             Title="Calculators">

    <!-- 
    Calculator Hub Page
    Provides grouped navigation to all calculators, organized by category
    to match the WPF Tools menu structure.
    -->

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            
            <!-- Header -->
            <Label Text="Construction Calculators"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10,0,20" />

            <!-- Common Tools Category -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Common Tools"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"
                       Margin="0,0,0,10" />
                
                <Button Text="Unit Converter"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="UnitConverter"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Area Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="AreaCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
            </VerticalStackLayout>

            <!-- Geometry & Site Category -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Geometry &amp; Site"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"
                       Margin="0,0,0,10" />
                
                <Button Text="Angle Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="AngleCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Survey Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="SurveyCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Grading/Slope Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="GradingCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
            </VerticalStackLayout>

            <!-- Building Elements & Layout Category -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Building Elements &amp; Layout"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"
                       Margin="0,0,0,10" />
                
                <Button Text="Stair Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="StairCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Accessibility Ramp Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="RampCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Seating Layout Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="SeatingLayout"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
            </VerticalStackLayout>

            <!-- Materials & Estimating Category -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Materials &amp; Estimating"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"
                       Margin="0,0,0,10" />
                
                <Button Text="Concrete Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="ConcreteCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Roofing Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="RoofingCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Drywall Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="DrywallCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Paint Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="PaintCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Flooring &amp; Countertops Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="FlooringCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Board Feet Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="BoardFeetCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
            </VerticalStackLayout>

            <!-- Systems (HVAC & Plumbing) Category -->
            <VerticalStackLayout Spacing="10">
                <Label Text="Systems (HVAC &amp; Plumbing)"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"
                       Margin="0,0,0,10" />
                
                <Button Text="HVAC Multi-Zone Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="HVACCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Plumbing Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="PlumbingCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
                
                <Button Text="Electrical Load Calculator"
                        Clicked="OnCalculatorClicked"
                        CommandParameter="ElectricalCalculator"
                        Style="{StaticResource ActionButton}"
                        HeightRequest="50" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
