<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionCalculatorMAUI.Pages.SplashPage"
             BackgroundColor="#1E88E5">
    
    <Grid>
        <Image WidthRequest="310"
               HeightRequest="310"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Aspect="AspectFit">
            <Image.Source>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="WinUI">splashlogo.png</On>
                    <On Platform="Android,iOS,MacCatalyst">splashlogo</On>
                </OnPlatform>
            </Image.Source>
        </Image>
    </Grid>
    
</ContentPage>
