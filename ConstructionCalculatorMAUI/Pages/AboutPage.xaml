<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionCalculatorMAUI.Pages.AboutPage"
             Title="About">

    <!-- 
    About Page
    Displays application information, version, and features.
    -->

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
            
            <Image WidthRequest="250"
                   HeightRequest="250"
                   HorizontalOptions="Center"
                   Aspect="AspectFit"
                   Margin="0,20,0,10">
                <Image.Source>
                    <OnPlatform x:TypeArguments="ImageSource">
                        <On Platform="WinUI">logo_main.png</On>
                        <On Platform="Android,iOS,MacCatalyst">logo_main</On>
                    </OnPlatform>
                </Image.Source>
            </Image>
            
            <Label Text="Construction Calculator"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource Primary}" />

            <Label Text="Version 2.0.6 (MAUI)"
                   FontSize="16"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource SecondaryTextColor}" />

            <BoxView HeightRequest="2"
                     Color="{DynamicResource SecondaryTextColor}"
                     Margin="40,10,40,10" />

            <Label FontSize="14"
                   HorizontalTextAlignment="Center"
                   Margin="20,0,20,0">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="A professional calculator for construction measurements&#x0a;" />
                        <Span Text="with feet-inches support and fractions to 1/16&quot; precision." />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Label Text="Features include:"
                   FontSize="14"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,10" />

            <VerticalStackLayout Spacing="3" 
                                Margin="20,0,20,0"
                                HorizontalOptions="Center"
                                MaximumWidthRequest="600">
                <!-- Main Calculator -->
                <Label Text="• Basic calculations with chainable operations" FontSize="13" />
                <Label Text="• Percentage, square root, and squared operations" FontSize="13" />
                <Label Text="• Memory functions (MC, MR, M+, M-)" FontSize="13" />

                <!-- Common Tools -->
                <Label Text="Common Tools:" FontSize="13" FontAttributes="Bold" Margin="0,10,0,3" />
                <Label Text="• Unit Converter for length, area, volume, weight, temperature" FontSize="13" />
                <Label Text="• Area Calculator for complex floor plans" FontSize="13" />

                <!-- Geometry & Site -->
                <Label Text="Geometry &amp; Site:" FontSize="13" FontAttributes="Bold" Margin="0,10,0,3" />
                <Label Text="• Angle Calculator with trigonometry solver" FontSize="13" />
                <Label Text="• Survey Calculator for bearing/azimuth and coordinates" FontSize="13" />
                <Label Text="• Grading/Slope Calculator" FontSize="13" />

                <!-- Building Elements & Layout -->
                <Label Text="Building Elements &amp; Layout:" FontSize="13" FontAttributes="Bold" Margin="0,10,0,3" />
                <Label Text="• Stair Calculator with code compliance" FontSize="13" />
                <Label Text="• Accessibility Ramp Calculator with ADA compliance" FontSize="13" />
                <Label Text="• Seating Layout Calculator for auditoriums" FontSize="13" />

                <!-- Materials & Estimating -->
                <Label Text="Materials &amp; Estimating:" FontSize="13" FontAttributes="Bold" Margin="0,10,0,3" />
                <Label Text="• Concrete Calculator for volume and materials" FontSize="13" />
                <Label Text="• Roofing Calculator for area and materials" FontSize="13" />
                <Label Text="• Drywall Calculator for materials" FontSize="13" />
                <Label Text="• Paint Calculator for coverage and materials" FontSize="13" />
                <Label Text="• Flooring &amp; Countertops Calculator with waste factors" FontSize="13" />
                <Label Text="• Board Feet Calculator for lumber" FontSize="13" />

                <!-- Systems (HVAC & Plumbing) -->
                <Label Text="Systems (HVAC &amp; Plumbing):" FontSize="13" FontAttributes="Bold" Margin="0,10,0,3" />
                <Label Text="• HVAC Calculator for heating/cooling BTU and duct sizing" FontSize="13" />
                <Label Text="• Plumbing Calculator for pipe sizing and flow rates" FontSize="13" />
                <Label Text="• Electrical Load Calculator for NEC-compliant panel sizing" FontSize="13" />
            </VerticalStackLayout>

            <BoxView HeightRequest="2"
                     Color="{DynamicResource SecondaryTextColor}"
                     Margin="40,20,40,20" />

            <Label Text="Developed for construction professionals"
                   FontSize="12"
                   FontAttributes="Italic"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource SecondaryTextColor}" />

            <Label Text="Cross-platform support: Windows, macOS, iOS, Android"
                   FontSize="12"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource SecondaryTextColor}"
                   Margin="0,5,0,0" />

            <Label Text="© 2025 Lee Cassin"
                   FontSize="12"
                   HorizontalTextAlignment="Center"
                   TextColor="{DynamicResource SecondaryTextColor}"
                   Margin="0,5,0,20" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
