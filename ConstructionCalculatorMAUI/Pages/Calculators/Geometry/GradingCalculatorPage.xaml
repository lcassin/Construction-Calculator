<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionCalculatorMAUI.Pages.Calculators.Geometry.GradingCalculatorPage"
             Title="Grading/Slope Calculator">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Help" Clicked="OnHelpClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Instructions -->
            <Label Text="Enter any one value to calculate the others:" 
                   FontSize="14" 
                   TextColor="Gray" />

            <!-- Slope Inputs -->
            <Label Text="Slope Measurements" FontSize="14" FontAttributes="Bold" />
            
            <HorizontalStackLayout Spacing="10">
                <Label Text="Rise:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="RiseEntry" WidthRequest="300" Keyboard="Numeric" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Run:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="RunEntry" WidthRequest="300" Keyboard="Numeric" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Percent (%):" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="PercentEntry" WidthRequest="300" Keyboard="Numeric" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Angle (degrees):" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="AngleEntry" WidthRequest="300" Keyboard="Numeric" />
            </HorizontalStackLayout>

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center" Margin="0,10,0,10">
                <Button Text="Calculate" 
                        Style="{StaticResource PrimaryButton}"
                        WidthRequest="150"
                        Clicked="Calculate_Clicked" />
                <Button Text="Clear" 
                        Style="{StaticResource ActionButton}"
                        WidthRequest="100"
                        Clicked="Clear_Clicked" />
            </HorizontalStackLayout>

            <!-- Result Display -->
            <Frame BorderColor="Gray" Padding="15" CornerRadius="5">
                <Label x:Name="ResultLabel" 
                       Text="" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       MinimumHeightRequest="100" />
            </Frame>

            <!-- Instructions -->
            <Label FontSize="11" TextColor="Gray">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Slope can be expressed as:" />
                        <Span Text="&#x0a;• Rise/Run ratio (e.g., 1:12 means 1 unit rise per 12 units run)" />
                        <Span Text="&#x0a;• Percent grade (e.g., 8.33% = 1:12 slope)" />
                        <Span Text="&#x0a;• Angle in degrees (e.g., 4.76° = 1:12 slope)" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
