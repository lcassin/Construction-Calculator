<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionCalculatorMAUI.Pages.Calculators.Materials.DrywallCalculatorPage"
             Title="Drywall Calculator">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Help" Clicked="OnHelpClicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Room Dimensions -->
            <Label Text="Room Dimensions" FontSize="14" FontAttributes="Bold" />
            
            <HorizontalStackLayout Spacing="10">
                <Label Text="Length (ft):" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="LengthEntry" WidthRequest="200" Keyboard="Numeric" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Width (ft):" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="WidthEntry" WidthRequest="200" Keyboard="Numeric" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Height (ft):" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="HeightEntry" WidthRequest="200" Keyboard="Numeric" />
            </HorizontalStackLayout>

            <!-- Drywall Options -->
            <Label Text="Drywall Options" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
            
            <HorizontalStackLayout Spacing="10">
                <Label Text="Sheet Size:" WidthRequest="120" VerticalOptions="Center" />
                <Picker x:Name="SheetSizePicker" WidthRequest="200" SelectedIndex="0">
                    <Picker.Items>
                        <x:String>4' × 8' (32 sq ft)</x:String>
                        <x:String>4' × 10' (40 sq ft)</x:String>
                        <x:String>4' × 12' (48 sq ft)</x:String>
                    </Picker.Items>
                </Picker>
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Include Ceiling:" WidthRequest="120" VerticalOptions="Center" />
                <CheckBox x:Name="IncludeCeilingCheckBox" IsChecked="True" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Waste %:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="WastePercentEntry" WidthRequest="200" Keyboard="Numeric" Text="10" />
            </HorizontalStackLayout>

            <!-- Calculate Button -->
            <Button Text="Calculate" 
                    Style="{StaticResource PrimaryButton}"
                    Clicked="Calculate_Clicked"
                    Margin="0,10,0,10" />

            <!-- Result Display -->
            <Frame BorderColor="Gray" Padding="15" CornerRadius="5">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="ResultLabel" 
                           Text="" 
                           FontSize="14" 
                           FontAttributes="Bold" />
                    
                    <HorizontalStackLayout Spacing="10" Margin="0,15,0,0">
                        <Label Text="Cost per Sheet ($):" WidthRequest="140" VerticalOptions="Center" />
                        <Entry x:Name="CostPerSheetEntry" WidthRequest="100" Keyboard="Numeric" Text="0"
                               TextChanged="CostPerSheetEntry_TextChanged" />
                    </HorizontalStackLayout>
                    
                    <Label x:Name="TotalCostLabel" Text="Estimated Total Cost: $0.00" 
                           FontSize="16" FontAttributes="Bold" TextColor="DarkGreen" />
                </VerticalStackLayout>
            </Frame>

            <!-- Instructions -->
            <Label FontSize="11" TextColor="Gray">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Standard sheet sizes: 4'×8' (most common), 4'×10', 4'×12'" />
                        <Span Text="&#x0a;Waste allowance accounts for cuts and damaged sheets" />
                        <Span Text="&#x0a;Results rounded up to nearest whole sheet" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
