<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionCalculatorMAUI.Pages.Calculators.Materials.RoofingCalculatorPage"
             Title="Roofing Calculator">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Roof Dimensions -->
            <Label Text="Roof Dimensions" FontSize="14" FontAttributes="Bold" />
            
            <HorizontalStackLayout Spacing="10">
                <Label Text="Length (ft):" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="LengthEntry" WidthRequest="200" Keyboard="Numeric" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Width (ft):" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="WidthEntry" WidthRequest="200" Keyboard="Numeric" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Pitch:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="PitchEntry" WidthRequest="200" Text="4/12" />
            </HorizontalStackLayout>

            <!-- Shingle Options -->
            <Label Text="Shingle Options" FontSize="14" FontAttributes="Bold" Margin="0,10,0,0" />
            
            <HorizontalStackLayout Spacing="10">
                <Label Text="Bundles/Square:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="BundlesPerSquareEntry" WidthRequest="200" Keyboard="Numeric" Text="3" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <Label Text="Waste %:" WidthRequest="120" VerticalOptions="Center" />
                <Entry x:Name="WastePercentEntry" WidthRequest="200" Keyboard="Numeric" Text="10" />
            </HorizontalStackLayout>

            <!-- Calculate Button -->
            <Button Text="Calculate" 
                    Style="{StaticResource PrimaryButton}"
                    Clicked="Calculate_Clicked"
                    Margin="0,10,0,10" />

            <!-- Result Display -->
            <Frame BorderColor="Gray" Padding="15" CornerRadius="5">
                <VerticalStackLayout Spacing="10">
                    <Label x:Name="ResultLabel" 
                           Text="" 
                           FontSize="14" 
                           FontAttributes="Bold" />
                    
                    <HorizontalStackLayout Spacing="10" Margin="0,15,0,0">
                        <Label Text="Cost per Bundle ($):" WidthRequest="140" VerticalOptions="Center" />
                        <Entry x:Name="CostPerBundleEntry" WidthRequest="100" Keyboard="Numeric" Text="0"
                               TextChanged="CostPerBundleEntry_TextChanged" />
                    </HorizontalStackLayout>
                    
                    <Label x:Name="TotalCostLabel" Text="Estimated Total Cost: $0.00" 
                           FontSize="16" FontAttributes="Bold" TextColor="DarkGreen" />
                </VerticalStackLayout>
            </Frame>

            <!-- Instructions -->
            <Label FontSize="11" TextColor="Gray">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Pitch format: rise/run (e.g., 4/12 means 4 inches rise per 12 inches run)" />
                        <Span Text="&#x0a;Standard: 3 bundles per square (100 sq ft)" />
                        <Span Text="&#x0a;Waste allowance accounts for cuts, overlaps, and ridge caps" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
