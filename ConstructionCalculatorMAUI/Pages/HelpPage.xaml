<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConstructionCalculatorMAUI.Pages.HelpPage"
             Title="Help">

    <!-- 
    Help Page
    Displays context-sensitive help for calculators with inputs, shortcuts, examples, and tips.
    -->

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Title -->
            <Label x:Name="TitleLabel"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Margin="0,10,0,5" />

            <!-- Summary -->
            <Label x:Name="SummaryLabel"
                   FontSize="14"
                   TextColor="{DynamicResource SecondaryTextColor}"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,10" />

            <BoxView HeightRequest="2"
                     Color="{DynamicResource SecondaryTextColor}"
                     Margin="20,0,20,10" />

            <!-- Expected Inputs Section -->
            <Label x:Name="ExpectedInputsHeader"
                   Text="Expected Inputs"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,10,0,5" />
            
            <VerticalStackLayout x:Name="ExpectedInputsList"
                                 Spacing="3"
                                 Margin="10,0,0,0" />

            <!-- Shortcuts Section -->
            <Label x:Name="ShortcutsHeader"
                   Text="Shortcuts"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,15,0,5" />
            
            <VerticalStackLayout x:Name="ShortcutsList"
                                 Spacing="5"
                                 Margin="10,0,0,0" />

            <!-- Examples Section -->
            <Label x:Name="ExamplesHeader"
                   Text="Examples"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,15,0,5" />
            
            <VerticalStackLayout x:Name="ExamplesList"
                                 Spacing="8"
                                 Margin="10,0,0,0" />

            <!-- Tips Section -->
            <Label x:Name="TipsHeader"
                   Text="Tips"
                   FontSize="18"
                   FontAttributes="Bold"
                   Margin="0,15,0,5" />
            
            <VerticalStackLayout x:Name="TipsList"
                                 Spacing="3"
                                 Margin="10,0,0,0" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
