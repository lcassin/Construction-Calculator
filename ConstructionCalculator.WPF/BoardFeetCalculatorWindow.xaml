<Window x:Class="ConstructionCalculator.WPF.BoardFeetCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Board Feet Calculator" Height="650" Width="550"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Instructions -->
		<TextBlock Grid.Row="0" 
                   Text="Calculate board feet for lumber pieces" 
                   FontSize="14" 
                   Foreground="Gray"
                   Margin="0,0,0,15"/>

		<!-- Input Section -->
		<StackPanel Grid.Row="1" Margin="0,0,0,15">
			<TextBlock Text="Add Lumber Piece" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
			
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<Label Grid.Column="0" Content="Thickness:" VerticalAlignment="Center" FontSize="12"/>
				<TextBox x:Name="ThicknessTextBox" Grid.Column="1" Height="30" FontSize="12" VerticalContentAlignment="Center" Margin="0,0,5,0"/>
				
				<Label Grid.Column="2" Content="Width:" VerticalAlignment="Center" FontSize="12"/>
				<TextBox x:Name="WidthTextBox" Grid.Column="3" Height="30" FontSize="12" VerticalContentAlignment="Center" Margin="0,0,5,0"/>
				
				<Label Grid.Column="4" Content="Length:" VerticalAlignment="Center" FontSize="12"/>
				<TextBox x:Name="LengthTextBox" Grid.Column="5" Height="30" FontSize="12" VerticalContentAlignment="Center" Margin="0,0,5,0"/>
				
				<Button Grid.Column="6" Content="Add" 
                        Style="{StaticResource PrimaryActionButtonStyle}"
                        Width="60"
                        Height="30"
                        FontSize="12"
                        Click="Add_Click"/>
			</Grid>

			<TextBlock Text="(Thickness and Width in inches, Length in feet)" 
                       FontSize="10" 
                       Foreground="Gray" 
                       Margin="0,5,0,0"/>
		</StackPanel>

		<!-- List of Pieces -->
		<Border Grid.Row="2" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,15">
			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<StackPanel x:Name="PiecesPanel" Margin="10"/>
			</ScrollViewer>
		</Border>

		<!-- Total Display -->
		<Border Grid.Row="3" BorderBrush="Gray" BorderThickness="2" Padding="15" Margin="0,0,0,15" Background="#F5F5F5">
			<TextBlock x:Name="TotalTextBlock" 
                       Text="Total Board Feet: 0.00" 
                       FontSize="16" 
                       FontWeight="Bold"
                       TextAlignment="Center"/>
		</Border>

		<!-- Action Buttons -->
		<StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
			<Button Content="Clear All" 
                    Style="{StaticResource ActionButtonStyle}"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="ClearAll_Click"/>
		</StackPanel>
	</Grid>
</Window>
