<Window x:Class="ConstructionCalculator.WPF.ConcreteCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Concrete Calculator" Height="700" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<Grid Margin="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Calculation Type -->
			<StackPanel Grid.Row="0" Margin="0,0,0,20">
				<Label Content="Calculation Type:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
				<ComboBox x:Name="CalculationTypeComboBox" 
                          Height="30" 
                          FontSize="14"
                          SelectionChanged="CalculationType_SelectionChanged">
					<ComboBoxItem Content="Slab" IsSelected="True"/>
					<ComboBoxItem Content="Footing"/>
					<ComboBoxItem Content="Column"/>
				</ComboBox>
			</StackPanel>

			<!-- Slab Inputs -->
			<StackPanel x:Name="SlabInputs" Grid.Row="1" Visibility="Visible">
				<TextBlock Text="Slab Dimensions" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Length (ft):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="SlabLengthTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Width (ft):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="SlabWidthTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,15">
					<Label Content="Thickness (in):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="SlabThicknessTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>
			</StackPanel>

			<!-- Footing Inputs -->
			<StackPanel x:Name="FootingInputs" Grid.Row="1" Visibility="Collapsed">
				<TextBlock Text="Footing Dimensions" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Perimeter (ft):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="FootingPerimeterTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Width (in):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="FootingWidthTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,15">
					<Label Content="Depth (in):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="FootingDepthTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>
			</StackPanel>

			<!-- Column Inputs -->
			<StackPanel x:Name="ColumnInputs" Grid.Row="1" Visibility="Collapsed">
				<TextBlock Text="Column Dimensions" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Diameter (in):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="ColumnDiameterTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Height (ft):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="ColumnHeightTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,15">
					<Label Content="Quantity:" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="ColumnQuantityTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="1"/>
				</StackPanel>
			</StackPanel>

			<!-- Waste Percentage -->
			<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,20">
				<Label Content="Waste %:" Width="120" VerticalAlignment="Center" FontSize="14"/>
				<TextBox x:Name="WastePercentTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="10"/>
			</StackPanel>

			<!-- Calculate Button -->
			<Button Grid.Row="3" Content="Calculate" 
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Width="200"
                    Height="40"
                    FontSize="16"
                    Margin="0,0,0,20"
                    Click="Calculate_Click"/>

			<!-- Result Display -->
			<Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
				<StackPanel>
					<TextBlock x:Name="ResultTextBlock" 
                               Text="" 
                               FontSize="14" 
                               FontWeight="Bold"
                               TextWrapping="Wrap"
                               MinHeight="80"/>
				</StackPanel>
			</Border>

			<!-- Instructions -->
			<TextBlock Grid.Row="5" 
                       FontSize="11" 
                       Foreground="Gray" 
                       TextWrapping="Wrap"
                       Margin="0,10,0,0">
				<Run Text="Tip: Results are rounded up to the nearest yard for ordering."/>
				<LineBreak/>
				<Run Text="Standard waste allowance is 10% but can be adjusted."/>
			</TextBlock>
		</Grid>
	</ScrollViewer>
</Window>
