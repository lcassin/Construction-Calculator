<Window x:Class="ConstructionCalculator.WPF.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="White">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#202020"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock x:Name="IconTextBlock" 
                       FontSize="48" 
                       VerticalAlignment="Center"
                       Margin="0,0,15,0"/>
            <TextBlock x:Name="TitleTextBlock" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Scrollable Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Summary -->
                <TextBlock x:Name="SummaryTextBlock" 
                           TextWrapping="Wrap" 
                           FontSize="14" 
                           Margin="0,0,0,20"/>

                <!-- Expected Inputs -->
                <TextBlock Text="Expected Inputs" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"
                           x:Name="ExpectedInputsHeader"/>
                <ItemsControl x:Name="ExpectedInputsItemsControl" Margin="0,0,0,20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       TextWrapping="Wrap" 
                                       Margin="20,2,0,2"
                                       Foreground="#505050">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding}"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Keyboard Shortcuts -->
                <TextBlock Text="Keyboard Shortcuts" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"
                           x:Name="ShortcutsHeader"/>
                <ItemsControl x:Name="ShortcutsItemsControl" Margin="0,0,0,20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="20,2,0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding Keys}" 
                                           FontFamily="Consolas"
                                           Foreground="#505050"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Action}" 
                                           TextWrapping="Wrap"
                                           Foreground="#505050"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Examples -->
                <TextBlock Text="Examples" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"
                           x:Name="ExamplesHeader"/>
                <ItemsControl x:Name="ExamplesItemsControl" Margin="0,0,0,20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="20,5,0,5">
                                <TextBlock FontFamily="Consolas" Foreground="#505050">
                                    <Run Text="{Binding Input, Mode=OneWay}" FontWeight="SemiBold"/>
                                    <Run Text=" â†’ " />
                                    <Run Text="{Binding Result, Mode=OneWay}"/>
                                </TextBlock>
                                <TextBlock Text="{Binding Notes}" 
                                           TextWrapping="Wrap" 
                                           Margin="0,2,0,0"
                                           FontSize="12"
                                           Foreground="#707070"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Tips -->
                <TextBlock Text="Tips" 
                           FontSize="16" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,10"
                           x:Name="TipsHeader"/>
                <ItemsControl x:Name="TipsItemsControl" Margin="0,0,0,20">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" 
                                       TextWrapping="Wrap" 
                                       Margin="20,2,0,2"
                                       Foreground="#505050">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="{Binding}"/>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- Close Button -->
        <Button Grid.Row="2" 
                Content="Close" 
                HorizontalAlignment="Right" 
                Margin="0,20,0,0"
                Padding="20,8"
                MinWidth="100"
                Style="{StaticResource ActionButtonStyle}"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
