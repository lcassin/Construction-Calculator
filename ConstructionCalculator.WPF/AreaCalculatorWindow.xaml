<Window x:Class="ConstructionCalculator.WPF.AreaCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Area Calculator" Height="650" Width="550"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Instructions -->
        <TextBlock Grid.Row="0" Text="Calculate total square footage by adding multiple rectangular sections.&#x0a;Break complex floor plans into rectangles." 
                   FontSize="12" FontStyle="Italic" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,15"/>

        <!-- Length Input -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Length:" Width="100" VerticalAlignment="Center" FontSize="14"/>
            <TextBox x:Name="LengthTextBox" Width="180" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Width Input -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
            <Label Content="Width:" Width="100" VerticalAlignment="Center" FontSize="14"/>
            <TextBox x:Name="WidthTextBox" Width="180" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
            <Button Content="Add Section" Width="180" Height="60" FontSize="14" FontWeight="Bold" 
                    Margin="10,0,0,0" Click="AddSectionButton_Click"/>
        </StackPanel>

        <!-- Sections Label -->
        <Label Grid.Row="3" Content="Sections:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>

        <!-- Sections ListBox -->
        <Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
            <ListBox x:Name="SectionsListBox" FontFamily="Consolas" FontSize="12" Height="200"/>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,0,0,15">
            <Button Content="Remove Selected" Width="150" Height="40" FontSize="12" 
                    Margin="0,0,10,0" Click="RemoveSectionButton_Click"/>
            <Button Content="Clear All" Width="150" Height="40" FontSize="12" 
                    Margin="0,0,10,0" Click="ClearAllButton_Click"/>
            <Button Content="Copy Total" Width="150" Height="40" FontSize="12" 
                    Click="CopyTotalButton_Click"/>
        </StackPanel>

        <!-- Total Area Display -->
        <Border Grid.Row="6" BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,10,0,0">
            <TextBlock x:Name="TotalAreaLabel" Text="Total Area: 0.00 sq ft" FontSize="20" FontWeight="Bold" 
                       TextAlignment="Center"/>
        </Border>
    </Grid>
</Window>
