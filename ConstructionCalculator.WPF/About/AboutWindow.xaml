<Window x:Class="ConstructionCalculator.WPF.About.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Construction Calculator" 
        Height="650" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Assets/app.ico">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40,30,40,30" HorizontalAlignment="Center">
            
            <!-- App Icon -->
            <Image Source="pack://application:,,,/Assets/logo-main.png"
                   Width="200" 
                   Height="200" 
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   SnapsToDevicePixels="True"
                   UseLayoutRounding="True"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   Margin="0,0,0,20"/>
            
            <!-- App Title -->
            <TextBlock Text="Construction Calculator"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                       Margin="0,0,0,10"/>
            
            <!-- Version -->
            <TextBlock Text="Version 2.0.6 (WPF with Fluent Theme)"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       Foreground="Gray"
                       Margin="0,0,0,20"/>
            
            <!-- Separator -->
            <Border Height="2" 
                    Background="LightGray" 
                    Margin="40,0,40,20"/>
            
            <!-- Description -->
            <TextBlock TextWrapping="Wrap"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,10">
                <Run Text="A professional calculator for construction measurements"/>
                <LineBreak/>
                <Run Text="with feet-inches support and fractions to 1/16&quot; precision."/>
            </TextBlock>
            
            <!-- Features Section -->
            <TextBlock Text="Features include:"
                       FontSize="14"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,10"/>
            
            <StackPanel Margin="20,0,20,0">
                <!-- Main Calculator -->
                <TextBlock Text="• Basic calculations with chainable operations" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Percentage, square root, and squared operations" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Memory functions (MC, MR, M+, M-)" 
                           FontSize="13" Margin="0,3,0,3"/>
                
                <!-- Common Tools -->
                <TextBlock Text="Common Tools:" 
                           FontSize="13" FontWeight="SemiBold" Margin="0,10,0,3"/>
                <TextBlock Text="• Unit Converter for length, area, volume, weight, temperature" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Area Calculator for complex floor plans" 
                           FontSize="13" Margin="0,3,0,3"/>
                
                <!-- Geometry & Site -->
                <TextBlock Text="Geometry &amp; Site:" 
                           FontSize="13" FontWeight="SemiBold" Margin="0,10,0,3"/>
                <TextBlock Text="• Angle Calculator with trigonometry solver" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Survey Calculator for bearing/azimuth and coordinates"
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Grading/Slope Calculator" 
                           FontSize="13" Margin="0,3,0,3"/>
                
                <!-- Building Elements & Layout -->
                <TextBlock Text="Building Elements &amp; Layout:" 
                           FontSize="13" FontWeight="SemiBold" Margin="0,10,0,3"/>
                <TextBlock Text="• Stair Calculator with code compliance" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Accessibility Ramp Calculator with ADA compliance" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Seating Layout Calculator for auditoriums" 
                           FontSize="13" Margin="0,3,0,3"/>
                
                <!-- Materials & Estimating -->
                <TextBlock Text="Materials &amp; Estimating:" 
                           FontSize="13" FontWeight="SemiBold" Margin="0,10,0,3"/>
                <TextBlock Text="• Concrete Calculator for volume and materials" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Roofing Calculator for area and materials" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Drywall Calculator for materials" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Paint Calculator for coverage and materials" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Flooring &amp; Countertops Calculator with waste factors" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Board Feet Calculator for lumber" 
                           FontSize="13" Margin="0,3,0,3"/>
                
                <!-- Systems (HVAC & Plumbing) -->
                <TextBlock Text="Systems (HVAC &amp; Plumbing):" 
                           FontSize="13" FontWeight="SemiBold" Margin="0,10,0,3"/>
                <TextBlock Text="• HVAC Calculator for heating/cooling BTU and duct sizing" 
                           FontSize="13" Margin="0,3,0,3"/>
                <TextBlock Text="• Plumbing Calculator for pipe sizing and flow rates" 
                           FontSize="13" Margin="0,3,0,3"/>
            </StackPanel>
            
            <!-- Separator -->
            <Border Height="2" 
                    Background="LightGray" 
                    Margin="40,20,40,20"/>
            
            <!-- Footer -->
            <TextBlock Text="Developed for construction professionals"
                       FontSize="12"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       Foreground="Gray"
                       Margin="0,0,0,10"/>
            
            <TextBlock Text="Windows Desktop Application"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Foreground="Gray"
                       Margin="0,0,0,5"/>
            
            <TextBlock Text="© 2025 Lee Cassin"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Foreground="Gray"
                       Margin="0,0,0,20"/>
            
            <!-- Close Button -->
            <Button Content="Close" 
                    Width="100" 
                    Height="35"
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Click="CloseButton_Click"
                    HorizontalAlignment="Center"/>
            
        </StackPanel>
    </ScrollViewer>
</Window>
