<Window x:Class="ConstructionCalculator.WPF.Calculators.Geometry.Roofing.RoofingCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ConstructionCalculator.WPF.Shared.HelpSystem"
        Title="Roofing Calculator" Height="650" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        local:HelpBehavior.CalculatorKind="Roofing">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<Grid Margin="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Roof Dimensions -->
			<StackPanel Grid.Row="0" Margin="0,0,0,20">
				<TextBlock Text="Roof Dimensions" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Length (ft):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="LengthTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Width (ft):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="WidthTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Pitch:" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="PitchTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="4/12"/>
				</StackPanel>
			</StackPanel>

			<!-- Shingle Options -->
			<StackPanel Grid.Row="1" Margin="0,0,0,20">
				<TextBlock Text="Shingle Options" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Bundles/Square:" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="BundlesPerSquareTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="3"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Waste %:" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="WastePercentTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="10"/>
				</StackPanel>
			</StackPanel>

			<!-- Calculate Button -->
			<Button Grid.Row="2" Content="Calculate" 
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Width="200"
                    Height="40"
                    FontSize="16"
                    Margin="0,0,0,20"
                    Click="Calculate_Click"/>

			<!-- Result Display -->
			<Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
				<TextBlock x:Name="ResultTextBlock" 
                           Text="" 
                           FontSize="14" 
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           MinHeight="100"/>
			</Border>

			<!-- Instructions -->
			<TextBlock Grid.Row="4" 
                       FontSize="11" 
                       Foreground="Gray" 
                       TextWrapping="Wrap"
                       Margin="0,10,0,0">
				<Run Text="Pitch format: rise/run (e.g., 4/12 means 4 inches rise per 12 inches run)"/>
				<LineBreak/>
				<Run Text="Standard: 3 bundles per square (100 sq ft)"/>
				<LineBreak/>
				<Run Text="Waste allowance accounts for cuts, overlaps, and ridge caps"/>
			</TextBlock>
		</Grid>
	</ScrollViewer>
</Window>
