<Window x:Class="ConstructionCalculator.WPF.Calculators.Geometry.Angle.AngleCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ConstructionCalculator.WPF.Shared.HelpSystem"
        Title="Angle Calculator" Height="800" Width="450"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        local:HelpBehavior.CalculatorKind="Angle">
    
    <!-- Button styles now defined in App.xaml -->
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Rise Input -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Rise:" Width="100" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="RiseTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Run Input -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Run:" Width="100" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="RunTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Calculate Angle Button -->
            <Button Grid.Row="2" x:Name="CalculateAngleButton" Content="Calculate Angle" 
                    Style="{StaticResource PrimaryActionButtonStyle}" Margin="100,0,0,26" Click="CalculateAngleButton_Click" HorizontalAlignment="Left"/>

            <!-- Angle Input -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Angle:" Width="100" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="AngleTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Mode and Calculate Ratio Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,15">
                <Button x:Name="ModeButton" Content="Degrees" 
                        Style="{StaticResource ActionButtonStyle}"
                        Margin="100,0,10,0" Click="ModeButton_Click" Height="22"/>
                <Button x:Name="CalculateRatioButton" Content="Calculate Ratio" 
                        Style="{StaticResource PrimaryActionButtonStyle}" Click="CalculateRatioButton_Click"/>
            </StackPanel>

            <!-- Result Display -->
            <Border Grid.Row="5" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20">
                <TextBlock x:Name="ResultLabel" Text="" FontSize="14" FontWeight="Bold" 
                           TextAlignment="Center" TextWrapping="Wrap" MinHeight="50"/>
            </Border>

            <!-- Right Triangle Solver Section -->
            <TextBlock Grid.Row="6" Text="Right Triangle Solver" FontSize="16" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Grid.Row="7" Text="Enter any 2 values to calculate the rest:" FontSize="12" 
                       FontStyle="Italic" Margin="0,0,0,10" Foreground="Gray"/>

            <!-- Solver Angle Input -->
            <StackPanel Grid.Row="8" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Angle:" Width="100" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="SolverAngleTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Solver Opposite Input -->
            <StackPanel Grid.Row="9" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Opposite (Rise):" Width="130" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="SolverOppositeTextBox" Width="250" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Solver Adjacent Input -->
            <StackPanel Grid.Row="10" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Adjacent (Run):" Width="130" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="SolverAdjacentTextBox" Width="250" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Solver Hypotenuse Input -->
            <StackPanel Grid.Row="11" Orientation="Horizontal" Margin="0,0,0,15">
                <Label Content="Hypotenuse:" Width="130" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="SolverHypotenuseTextBox" Width="250" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- Solver Buttons -->
            <StackPanel Grid.Row="12" Orientation="Horizontal" Margin="0,0,0,15">
                <Button x:Name="SolverCalculateButton" Content="Calculate" 
                        Style="{StaticResource PrimaryActionButtonStyle}" 
                        Margin="100,0,10,0" Click="SolverCalculateButton_Click" Height="31"/>
                <Button x:Name="SolverClearButton" Content="Clear" 
                        Style="{StaticResource ActionButtonStyle}"
                        Click="SolverClearButton_Click"/>
            </StackPanel>

            <!-- Solver Result Display -->
            <Border Grid.Row="13" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="120">
                    <TextBox x:Name="SolverResultTextBox" FontFamily="Consolas" FontSize="11" 
                             IsReadOnly="True" TextWrapping="Wrap" BorderThickness="0"
                             VerticalScrollBarVisibility="Auto"/>
                </ScrollViewer>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
