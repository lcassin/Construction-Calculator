<Window x:Class="ConstructionCalculator.WPF.Calculators.Geometry.Area.AreaCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ConstructionCalculator.WPF.Shared.HelpSystem"
        Title="Area Calculator" Height="650" Width="550"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        local:HelpBehavior.CalculatorKind="Area">

	<!-- Button styles now defined in App.xaml -->

	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Instructions -->
		<TextBlock Grid.Row="0" Text="Calculate total square footage by adding multiple rectangular sections.&#x0a;Break complex floor plans into rectangles." 
                   FontSize="12" FontStyle="Italic" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,15"/>

		<!-- Length Input -->
		<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
			<Label Content="Length:" Width="100" VerticalAlignment="Center" FontSize="14"/>
			<TextBox x:Name="LengthTextBox" Width="180" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
		</StackPanel>

		<!-- Width Input -->
		<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,15">
			<Label Content="Width:" Width="100" VerticalAlignment="Center" FontSize="14"/>
			<TextBox x:Name="WidthTextBox" Width="180" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
			<Button Content="Add Section" 
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Margin="10,0,0,0" Click="AddSectionButton_Click" Height="27"/>
		</StackPanel>

		<!-- Sections Label -->
		<Label Grid.Row="3" Content="Sections:" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>

		<!-- Sections ListBox -->
		<Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
			<ListBox x:Name="SectionsListBox" FontFamily="Consolas" FontSize="12" Height="200"/>
		</Border>

		<!-- Action Buttons -->
		<Grid Grid.Row="5" Margin="0,0,0,15" VerticalAlignment="Top">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Button Content="Remove Selected" MinWidth="130"
                    Style="{StaticResource ActionButtonStyle}"
                    Margin="1,8,5,7" Click="RemoveSectionButton_Click" RenderTransformOrigin="0.5,0.5">
				<Button.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform AngleX="-1.483"/>
						<RotateTransform/>
						<TranslateTransform X="-0.474"/>
					</TransformGroup>
				</Button.RenderTransform>
			</Button>
			<Button Grid.Column="1" Content="Clear All" MinWidth="130"
                    Style="{StaticResource ActionButtonStyle}"
                    Margin="10,8,10,8" Click="ClearAllButton_Click"/>
			<Button Grid.Column="2" Content="Copy Total" MinWidth="130"
                    Style="{StaticResource ActionButtonStyle}"
                    Click="CopyTotalButton_Click" Margin="5,8,5,7"/>
		</Grid>

		<!-- Total Area Display -->
		<Border Grid.Row="6" BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,10,0,0">
			<TextBlock x:Name="TotalAreaLabel" Text="Total Area: 0.00 sq ft" FontSize="20" FontWeight="Bold" 
                       TextAlignment="Center"/>
		</Border>
	</Grid>
</Window>
