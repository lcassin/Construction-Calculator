<Window x:Class="ConstructionCalculator.WPF.Calculators.Construction.Grading.GradingCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ConstructionCalculator.WPF.Shared.HelpSystem"
        Title="Grading/Slope Calculator" Height="600" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        local:HelpBehavior.CalculatorKind="Grading">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<Grid Margin="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Instructions -->
			<TextBlock Grid.Row="0" 
                       Text="Enter any one value to calculate the others:" 
                       FontSize="14" 
                       Foreground="Gray"
                       Margin="0,0,0,15"/>

			<!-- Slope Inputs -->
			<StackPanel Grid.Row="1" Margin="0,0,0,20">
				<TextBlock Text="Slope Measurements" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Rise:" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="RiseTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Run:" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="RunTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Percent (%):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="PercentTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Angle (degrees):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="AngleTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>
			</StackPanel>

			<!-- Calculate Button -->
			<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
				<Button Content="Calculate" 
                        Style="{StaticResource PrimaryActionButtonStyle}"
                        Width="150"
                        Height="40"
                        FontSize="16"
                        Margin="0,0,10,0"
                        Click="Calculate_Click"/>
				<Button Content="Clear" 
                        Style="{StaticResource ActionButtonStyle}"
                        Width="100"
                        Height="40"
                        FontSize="16"
                        Click="Clear_Click"/>
			</StackPanel>

			<!-- Result Display -->
			<Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
				<TextBlock x:Name="ResultTextBlock" 
                           Text="" 
                           FontSize="14" 
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           MinHeight="100"/>
			</Border>

			<!-- Instructions -->
			<TextBlock Grid.Row="4" 
                       FontSize="11" 
                       Foreground="Gray" 
                       TextWrapping="Wrap"
                       Margin="0,10,0,0">
				<Run Text="Slope can be expressed as:"/>
				<LineBreak/>
				<Run Text="• Rise/Run ratio (e.g., 1:12 means 1 unit rise per 12 units run)"/>
				<LineBreak/>
				<Run Text="• Percent grade (e.g., 8.33% = 1:12 slope)"/>
				<LineBreak/>
				<Run Text="• Angle in degrees (e.g., 4.76° = 1:12 slope)"/>
			</TextBlock>
		</Grid>
	</ScrollViewer>
</Window>
