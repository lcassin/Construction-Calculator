<Window x:Class="ConstructionCalculator.WPF.Calculators.Construction.Drywall.DrywallCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ConstructionCalculator.WPF.Shared.HelpSystem"
        Title="Drywall Calculator" Height="650" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        local:HelpBehavior.CalculatorKind="Drywall">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<Grid Margin="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Room Dimensions -->
			<StackPanel Grid.Row="0" Margin="0,0,0,20">
				<TextBlock Text="Room Dimensions" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Length (ft):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="LengthTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Width (ft):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="WidthTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Height (ft):" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="HeightTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>
			</StackPanel>

			<!-- Drywall Options -->
			<StackPanel Grid.Row="1" Margin="0,0,0,20">
				<TextBlock Text="Drywall Options" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Sheet Size:" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<ComboBox x:Name="SheetSizeComboBox" Width="300" Height="30" FontSize="14">
						<ComboBoxItem Content="4' × 8' (32 sq ft)" IsSelected="True"/>
						<ComboBoxItem Content="4' × 10' (40 sq ft)"/>
						<ComboBoxItem Content="4' × 12' (48 sq ft)"/>
					</ComboBox>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Include Ceiling:" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<CheckBox x:Name="IncludeCeilingCheckBox" VerticalAlignment="Center" IsChecked="True"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Waste %:" Width="120" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="WastePercentTextBox" Width="300" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="10"/>
				</StackPanel>
			</StackPanel>

			<!-- Calculate Button -->
			<Button Grid.Row="2" Content="Calculate" 
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Width="200"
                    Height="40"
                    FontSize="16"
                    Margin="0,0,0,20"
                    Click="Calculate_Click"/>

			<!-- Result Display -->
			<Border Grid.Row="3" BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
				<TextBlock x:Name="ResultTextBlock" 
                           Text="" 
                           FontSize="14" 
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           MinHeight="100"/>
			</Border>

			<!-- Instructions -->
			<TextBlock Grid.Row="4" 
                       FontSize="11" 
                       Foreground="Gray" 
                       TextWrapping="Wrap"
                       Margin="0,10,0,0">
				<Run Text="Standard sheet sizes: 4'×8' (most common), 4'×10', 4'×12'"/>
				<LineBreak/>
				<Run Text="Waste allowance accounts for cuts and damaged sheets"/>
				<LineBreak/>
				<Run Text="Results rounded up to nearest whole sheet"/>
			</TextBlock>
		</Grid>
	</ScrollViewer>
</Window>
