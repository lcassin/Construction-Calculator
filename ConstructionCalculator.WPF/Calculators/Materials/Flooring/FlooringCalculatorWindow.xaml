<Window x:Class="ConstructionCalculator.WPF.Calculators.Materials.Flooring.FlooringCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ConstructionCalculator.WPF.Calculators.Materials.Flooring"
        xmlns:help="clr-namespace:ConstructionCalculator.WPF.Shared.HelpSystem"
        Title="Flooring &amp; Counter Calculator" Height="750" Width="600"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/Assets/app.ico"
        help:HelpBehavior.CalculatorKind="Flooring">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Calculate material quantities for flooring, counters, tile, carpet, etc.&#x0a;Enter dimensions, select material type, and get quantity with waste allowance." 
                   FontSize="12" FontStyle="Italic" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Length:" Width="120" VerticalAlignment="Center" FontSize="14"/>
            <TextBox x:Name="LengthTextBox" Width="180" Height="30" FontSize="14" VerticalContentAlignment="Center"
                     ToolTip="Enter length (e.g., 12'6&quot; or 12.5)"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Width:" Width="120" VerticalAlignment="Center" FontSize="14"/>
            <TextBox x:Name="WidthTextBox" Width="180" Height="30" FontSize="14" VerticalContentAlignment="Center"
                     ToolTip="Enter width (e.g., 10'3&quot; or 10.25)"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Material Type:" Width="120" VerticalAlignment="Center" FontSize="14"/>
            <ComboBox x:Name="MaterialTypeComboBox" Width="180" Height="30" FontSize="14" 
                      SelectedIndex="0" SelectionChanged="MaterialTypeComboBox_SelectionChanged">
                <ComboBoxItem Content="Tile (12x12)"/>
                <ComboBoxItem Content="Tile (18x18)"/>
                <ComboBoxItem Content="Tile (24x24)"/>
                <ComboBoxItem Content="Hardwood Flooring"/>
                <ComboBoxItem Content="Laminate Flooring"/>
                <ComboBoxItem Content="Vinyl Plank"/>
                <ComboBoxItem Content="Carpet"/>
                <ComboBoxItem Content="Granite/Quartz Counter"/>
                <ComboBoxItem Content="Custom (sq ft)"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
            <Label Content="Waste Factor:" Width="120" VerticalAlignment="Center" FontSize="14"/>
            <TextBox x:Name="WasteFactorTextBox" Width="80" Height="30" FontSize="14" 
                     VerticalContentAlignment="Center" Text="10"
                     ToolTip="Percentage of extra material for waste/cuts"/>
            <Label Content="%" Width="30" VerticalAlignment="Center" FontSize="14" Margin="5,0,0,0"/>
            <Button Content="Add Section" 
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Margin="20,0,0,0" Click="AddSectionButton_Click" Height="27"/>
        </StackPanel>

        <Label Grid.Row="5" Content="Sections:" FontSize="14" FontWeight="Bold" Margin="0,5,0,5"/>

        <Border Grid.Row="6" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
            <ListBox x:Name="SectionsListBox" FontFamily="Consolas" FontSize="11"/>
        </Border>

        <Grid Grid.Row="7" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Remove Selected" MinWidth="120"
                    Style="{StaticResource ActionButtonStyle}"
                    Margin="0,0,5,0" Click="RemoveSectionButton_Click"/>
            <Button Grid.Column="1" Content="Clear All" MinWidth="120"
                    Style="{StaticResource ActionButtonStyle}"
                    Margin="5,0,5,0" Click="ClearAllButton_Click"/>
            <Button Grid.Column="2" Content="Copy Results" MinWidth="120"
                    Style="{StaticResource ActionButtonStyle}"
                    Margin="5,0,0,0" Click="CopyResultsButton_Click"/>
        </Grid>

        <Border Grid.Row="8" BorderBrush="Gray" BorderThickness="2" Padding="15" Background="#F5F5F5">
            <StackPanel>
                <TextBlock x:Name="TotalAreaLabel" Text="Total Area: 0.00 sq ft" 
                           FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                <TextBlock x:Name="MaterialNeededLabel" Text="Material Needed (with waste): 0.00 sq ft" 
                           FontSize="14" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                    <Label Content="Cost per Unit ($):" Width="140" VerticalAlignment="Center" FontSize="13"/>
                    <TextBox x:Name="CostPerUnitTextBox" Width="100" Height="28" FontSize="13" 
                             VerticalContentAlignment="Center" Text="0"
                             TextChanged="CostPerUnitTextBox_TextChanged"/>
                </StackPanel>
                <TextBlock x:Name="TotalCostLabel" Text="Estimated Total Cost: $0.00" 
                           FontSize="16" FontWeight="Bold" Foreground="DarkGreen" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
