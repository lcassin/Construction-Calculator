<Window x:Class="ConstructionCalculator.WPF.Calculators.Materials.Paint.PaintCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ConstructionCalculator.WPF.Calculators.Materials.Paint"
        xmlns:help="clr-namespace:ConstructionCalculator.WPF.Shared.HelpSystem"
        Title="Paint/Coverage Calculator" Height="700" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        help:HelpBehavior.CalculatorKind="Paint">

	<ScrollViewer VerticalScrollBarVisibility="Auto">
		<Grid Margin="20">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>

			<!-- Room Dimensions -->
			<StackPanel Grid.Row="0" Margin="0,0,0,20">
				<TextBlock Text="Room Dimensions" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Length (ft):" Width="140" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="LengthTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Width (ft):" Width="140" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="WidthTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Height (ft):" Width="140" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="HeightTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center"/>
				</StackPanel>
			</StackPanel>

			<!-- Paint Options -->
			<StackPanel Grid.Row="1" Margin="0,0,0,20">
				<TextBlock Text="Paint Options" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Include Ceiling:" Width="140" VerticalAlignment="Center" FontSize="14"/>
					<CheckBox x:Name="IncludeCeilingCheckBox" VerticalAlignment="Center" IsChecked="True"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Coats:" Width="140" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="CoatsTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="2"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Coverage (sq ft/gal):" Width="140" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="CoverageTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="350"/>
				</StackPanel>
			</StackPanel>

			<!-- Openings -->
			<StackPanel Grid.Row="2" Margin="0,0,0,20">
				<TextBlock Text="Openings (Optional)" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
				
				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Doors (20 sq ft ea):" Width="140" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="DoorsTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="0"/>
				</StackPanel>

				<StackPanel Orientation="Horizontal" Margin="0,0,0,10">
					<Label Content="Windows (15 sq ft ea):" Width="140" VerticalAlignment="Center" FontSize="14"/>
					<TextBox x:Name="WindowsTextBox" Width="280" Height="30" FontSize="14" VerticalContentAlignment="Center" Text="0"/>
				</StackPanel>
			</StackPanel>

			<!-- Calculate Button -->
			<Button Grid.Row="3" Content="Calculate" 
                    Style="{StaticResource PrimaryActionButtonStyle}"
                    Width="200"
                    Height="40"
                    FontSize="16"
                    Margin="0,0,0,20"
                    Click="Calculate_Click"/>

			<!-- Result Display -->
			<Border Grid.Row="4" BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,0,0,15">
				<TextBlock x:Name="ResultTextBlock" 
                           Text="" 
                           FontSize="14" 
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           MinHeight="100"/>
			</Border>

			<!-- Instructions -->
			<TextBlock Grid.Row="5" 
                       FontSize="11" 
                       Foreground="Gray" 
                       TextWrapping="Wrap"
                       Margin="0,10,0,0">
				<Run Text="Standard coverage: 350 sq ft per gallon (adjust for texture)"/>
				<LineBreak/>
				<Run Text="Openings are subtracted from total area"/>
				<LineBreak/>
				<Run Text="Results rounded up to nearest gallon"/>
			</TextBlock>
		</Grid>
	</ScrollViewer>
</Window>
