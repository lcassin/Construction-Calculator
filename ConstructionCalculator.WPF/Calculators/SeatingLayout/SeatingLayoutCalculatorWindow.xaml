<Window x:Class="ConstructionCalculator.WPF.Calculators.SeatingLayout.SeatingLayoutCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ConstructionCalculator.WPF.Calculators.SeatingLayout"
        xmlns:help="clr-namespace:ConstructionCalculator.WPF.Shared.HelpSystem"
        Title="Seating Layout Calculator" Height="700" Width="900"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        help:HelpBehavior.CalculatorKind="SeatingLayout">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Column -->
            <StackPanel Grid.Row="0" Grid.Column="0">
                <!-- Row Configuration Section -->
                <Border Background="LightGray" Padding="5" Margin="0,0,0,10">
                    <TextBlock Text="Row Configuration" FontSize="14" FontWeight="Bold"/>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Number of Rows:" Width="170" FontSize="12"/>
                    <TextBox x:Name="NumberOfRowsTextBox" Width="180" Height="28" Text="10" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Starting Radius (ft):" Width="170" FontSize="12"/>
                    <TextBox x:Name="StartingRadiusTextBox" Width="180" Height="28" Text="20" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Row Spacing (ft):" Width="170" FontSize="12"/>
                    <TextBox x:Name="RowSpacingTextBox" Width="180" Height="28" Text="3" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Arc Span (degrees):" Width="170" FontSize="12"/>
                    <TextBox x:Name="ArcSpanTextBox" Width="180" Height="28" Text="180" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Center Northing:" Width="170" FontSize="12"/>
                    <TextBox x:Name="CenterNorthingTextBox" Width="180" Height="28" Text="0" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Label Content="Center Easting:" Width="170" FontSize="12"/>
                    <TextBox x:Name="CenterEastingTextBox" Width="180" Height="28" Text="0" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Code Compliance Section -->
                <Border Background="LightGray" Padding="5" Margin="0,10,0,10">
                    <TextBlock Text="Code Compliance" FontSize="14" FontWeight="Bold"/>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Min Aisle Width (in):" Width="170" FontSize="12"/>
                    <TextBox x:Name="MinAisleWidthTextBox" Width="180" Height="28" Text="36" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Max Seats/Aisle:" Width="170" FontSize="12"/>
                    <TextBox x:Name="MaxSeatsTextBox" Width="180" Height="28" Text="14" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <!-- Right Column -->
            <StackPanel Grid.Row="0" Grid.Column="2">
                <!-- Chair Specifications Section -->
                <Border Background="LightGray" Padding="5" Margin="0,0,0,10">
                    <TextBlock Text="Chair Specifications" FontSize="14" FontWeight="Bold"/>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Type A Width (in):" Width="170" FontSize="12"/>
                    <TextBox x:Name="ChairAWidthTextBox" Width="180" Height="28" Text="24" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Type A Depth (in):" Width="170" FontSize="12"/>
                    <TextBox x:Name="ChairADepthTextBox" Width="180" Height="28" Text="20" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Type B Width (in):" Width="170" FontSize="12"/>
                    <TextBox x:Name="ChairBWidthTextBox" Width="180" Height="28" Text="20" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <Label Content="Type B Depth (in):" Width="170" FontSize="12"/>
                    <TextBox x:Name="ChairBDepthTextBox" Width="180" Height="28" Text="20" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Aisle Configuration Section -->
                <Border Background="LightGray" Padding="5" Margin="0,10,0,10">
                    <TextBlock Text="Aisle Configuration" FontSize="14" FontWeight="Bold"/>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Number of Aisles:" Width="170" FontSize="12"/>
                    <TextBox x:Name="NumberOfAislesTextBox" Width="180" Height="28" Text="2" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Aisle Width (in):" Width="170" FontSize="12"/>
                    <TextBox x:Name="AisleWidthTextBox" Width="180" Height="28" Text="36" FontSize="12" VerticalContentAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Aisle Spacing:" Width="170" FontSize="12"/>
                    <ComboBox x:Name="AisleSpacingComboBox" Width="180" Height="28" FontSize="12" SelectedIndex="0">
                        <ComboBoxItem Content="Evenly Spaced"/>
                        <ComboBoxItem Content="Custom Positions"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>

            <!-- Buttons and Results (spanning both columns) -->
            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <Button Content="Calculate Layout" Width="200" Height="45" 
                            Style="{StaticResource PrimaryActionButtonStyle}"
                            Margin="0,0,10,0" Click="CalculateLayoutButton_Click"/>
                    <Button Content="Export to CSV" Width="200" Height="45" 
                            Style="{StaticResource PrimaryActionButtonStyle}"
                            Click="ExportToCSVButton_Click"/>
                </StackPanel>

                <!-- Result Display -->
                <Border BorderBrush="Gray" BorderThickness="1" Padding="15" MinHeight="100">
                    <TextBlock x:Name="ResultLabel" Text="" FontSize="12" TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
