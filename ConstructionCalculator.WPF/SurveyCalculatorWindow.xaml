<Window x:Class="ConstructionCalculator.WPF.SurveyCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Survey Calculator" Height="680" Width="500"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#4A90E2"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        <Style x:Key="SymbolButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#FFB84D"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
    </Window.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Symbol Insertion Buttons -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <Label Content="Insert Symbol:" Width="110" VerticalAlignment="Center" FontSize="12"/>
                <Button Content="°" Width="35" Height="30" Style="{StaticResource SymbolButtonStyle}" Margin="0,0,5,0" Click="DegreeButton_Click"/>
                <Button Content="'" Width="35" Height="30" Style="{StaticResource SymbolButtonStyle}" Margin="0,0,5,0" Click="MinuteButton_Click"/>
                <Button Content="&quot;" Width="35" Height="30" Style="{StaticResource SymbolButtonStyle}" Click="SecondButton_Click"/>
            </StackPanel>

            <!-- Section 1: Bearing/Azimuth Converter -->
            <Border Grid.Row="1" Background="LightGray" Padding="5" Margin="0,0,0,10">
                <TextBlock Text="Bearing / Azimuth Converter" FontSize="14" FontWeight="Bold"/>
            </Border>

            <!-- Bearing Input -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Bearing:" Width="110" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="BearingTextBox" Width="320" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
            </StackPanel>

            <!-- Azimuth Input -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Azimuth:" Width="110" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="AzimuthTextBox" Width="320" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
            </StackPanel>

            <!-- Conversion Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Bearing → Azimuth" Width="150" Height="35" 
                        Style="{StaticResource PrimaryActionButtonStyle}" FontSize="12"
                        Margin="110,0,10,0" Click="BearingToAzimuthButton_Click" HorizontalAlignment="Left"/>
                <Button Content="Azimuth → Bearing" Width="160" Height="35" 
                        Style="{StaticResource PrimaryActionButtonStyle}" FontSize="12"
                        Click="AzimuthToBearingButton_Click"/>
            </StackPanel>

            <!-- Conversion Result -->
            <Border Grid.Row="5" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20">
                <TextBlock x:Name="ConversionResultLabel" Text="" FontSize="13" FontWeight="Bold" 
                           TextAlignment="Center" TextWrapping="Wrap" MinHeight="40"/>
            </Border>

            <!-- Separator -->
            <Separator Grid.Row="6" Margin="0,10,0,10"/>

            <!-- Section 2: Coordinate Geometry -->
            <Border Grid.Row="7" Background="LightGray" Padding="5" Margin="0,0,0,10">
                <TextBlock Text="Coordinate Geometry" FontSize="14" FontWeight="Bold"/>
            </Border>

            <!-- Start Northing Input -->
            <StackPanel Grid.Row="8" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Start Northing:" Width="140" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="StartNorthingTextBox" Width="290" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
            </StackPanel>

            <!-- Start Easting Input -->
            <StackPanel Grid.Row="9" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Start Easting:" Width="140" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="StartEastingTextBox" Width="290" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
            </StackPanel>

            <!-- Distance Input -->
            <StackPanel Grid.Row="10" Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Distance:" Width="140" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="DistanceTextBox" Width="290" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
            </StackPanel>

            <!-- Direction Input -->
            <StackPanel Grid.Row="11" Orientation="Horizontal" Margin="0,0,0,15">
                <Label Content="Azimuth/Bearing:" Width="140" VerticalAlignment="Center" FontSize="14"/>
                <TextBox x:Name="DirectionTextBox" Width="290" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
            </StackPanel>

            <!-- Calculate Button -->
            <Button Grid.Row="12" Content="Calculate End Point" Width="290" Height="40" 
                    Style="{StaticResource PrimaryActionButtonStyle}" Margin="140,0,0,15" 
                    Click="CalculateEndPointButton_Click" HorizontalAlignment="Left"/>

            <!-- Coordinate Result -->
            <Border Grid.Row="13" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,10">
                <TextBlock x:Name="CoordinateResultLabel" Text="" FontSize="13" FontWeight="Bold" 
                           TextAlignment="Center" TextWrapping="Wrap" MinHeight="60"/>
            </Border>
        </Grid>
    </ScrollViewer>
</Window>
