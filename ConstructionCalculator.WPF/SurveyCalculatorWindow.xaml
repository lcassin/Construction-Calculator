<Window x:Class="ConstructionCalculator.WPF.SurveyCalculatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Survey Calculator" Height="779" Width="478"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

	<!-- Button styles now defined in App.xaml -->

	<ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,30">
		<Grid Margin="20" Width="446" Height="754">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="16.92"/>
				<RowDefinition Height="50"/>
				<RowDefinition Height="Auto" MinHeight="86.995"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto" MinHeight="121.62"/>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="Auto" MinHeight="78"/>
				<RowDefinition Height="Auto" MinHeight="38"/>
			</Grid.RowDefinitions>

			<!-- Symbol Insertion Buttons -->
			<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15" HorizontalAlignment="Left" Width="418">
				<Label Content="Insert Symbol:" Width="110" VerticalAlignment="Center" FontSize="12"/>
				<Button Content="°" Width="40" Height="30" Style="{StaticResource SymbolButtonStyle}" Click="DegreeButton_Click" FontSize="20" Margin="0,0,5,0" VerticalAlignment="Center"/>
				<Button Content="'" Width="35" Height="30" Style="{StaticResource SymbolButtonStyle}" Margin="0,0,5,0" Click="MinuteButton_Click" FontSize="20"/>
				<Button Content="&quot;" Width="58" Height="35" Style="{StaticResource SymbolButtonStyle}" Click="SecondButton_Click" FontSize="20"/>
			</StackPanel>

			<!-- Section 1: Bearing/Azimuth Converter -->
			<Border Grid.Row="1" Background="LightGray" Padding="5" Margin="0,0,0,10">
				<TextBlock Text="Bearing / Azimuth Converter" FontSize="14" FontWeight="Bold" Margin="0,0,-18,0"/>
			</Border>

			<!-- Bearing Input -->
			<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
				<Label Content="Bearing:" Width="110" VerticalAlignment="Center" FontSize="14"/>
				<TextBox x:Name="BearingTextBox" Width="308" Height="30" FontSize="14" 
	                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus">
					<TextBox.Style>
						<Style TargetType="TextBox">
							<Style.Triggers>
								<Trigger Property="Text" Value="">
									<Setter Property="Background">
										<Setter.Value>
											<VisualBrush Stretch="None" AlignmentX="Left">
												<VisualBrush.Visual>
													<TextBlock Text="e.g., N 57° 00' E or N45E" 
	                                                           FontSize="12" Foreground="Gray" 
	                                                           Margin="5,0,0,0" VerticalAlignment="Center"/>
												</VisualBrush.Visual>
											</VisualBrush>
										</Setter.Value>
									</Setter>
								</Trigger>
							</Style.Triggers>
						</Style>
					</TextBox.Style>
				</TextBox>
			</StackPanel>

			<!-- Azimuth Input -->
			<StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10">
				<Label Content="Azimuth:" Width="110" VerticalAlignment="Center" FontSize="14"/>
				<TextBox x:Name="AzimuthTextBox" Width="308" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
			</StackPanel>

			<!-- Conversion Buttons -->
			<StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,0,0,10">
				<Button Content="Bearing → Azimuth" Width="150" Height="33" 
                        Style="{StaticResource PrimaryActionButtonStyle}" FontSize="12"
                        Margin="110,0,10,0" Click="BearingToAzimuthButton_Click"/>
				<Button Content="Azimuth → Bearing" Width="143" Height="35" 
                        Style="{StaticResource PrimaryActionButtonStyle}" FontSize="12"
                        Click="AzimuthToBearingButton_Click"/>
			</StackPanel>

			<!-- Conversion Result -->
			<Border Grid.Row="5" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,27,20">
				<TextBlock x:Name="ConversionResultLabel" Text="" FontSize="13" FontWeight="Bold" 
                           TextAlignment="Center" TextWrapping="Wrap" MinHeight="40" Margin="0,0,18,0"/>
			</Border>

			<!-- Separator -->
			<Separator Grid.Row="6" Margin="0,10,0,10"/>

			<!-- Section 2: Coordinate Geometry -->
			<Border Grid.Row="7" Background="LightGray" Padding="5" Margin="-6,0,10,0" Grid.RowSpan="2" Height="33" VerticalAlignment="Top">
				<TextBlock Text="Coordinate Geometry" FontSize="14" FontWeight="Bold" Margin="5,0,23,-20"/>
			</Border>

			<!-- Start Northing Input -->
			<StackPanel Grid.Row="8" Orientation="Horizontal" Margin="0,21,0,32" Grid.RowSpan="2">
				<Label Content="Start Northing:" Width="140" VerticalAlignment="Center" FontSize="14"/>
				<TextBox x:Name="StartNorthingTextBox" Width="278" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
			</StackPanel>

			<!-- Start Easting Input -->
			<StackPanel Grid.Row="9" Orientation="Horizontal" Margin="0,6,0,13" Grid.RowSpan="2">
				<Label Content="Start Easting:" Width="140" VerticalAlignment="Center" FontSize="14"/>
				<TextBox x:Name="StartEastingTextBox" Width="278" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
			</StackPanel>

			<!-- Distance Input -->
			<StackPanel Grid.Row="10" Orientation="Horizontal" Margin="0,13,0,10" Grid.RowSpan="2">
				<Label Content="Distance:" Width="140" VerticalAlignment="Center" FontSize="14"/>
				<TextBox x:Name="DistanceTextBox" Width="278" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
			</StackPanel>

			<!-- Direction Input -->
			<StackPanel Grid.Row="11" Orientation="Horizontal" Margin="4,15,0,69" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2">
				<StackPanel.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform AngleX="-0.829"/>
						<RotateTransform/>
						<TranslateTransform X="-0.736"/>
					</TransformGroup>
				</StackPanel.RenderTransform>
				<Label Content="Azimuth/Bearing:" Width="137" VerticalAlignment="Center" FontSize="14"/>
				<TextBox x:Name="DirectionTextBox" Width="276" Height="30" FontSize="14" 
                         VerticalContentAlignment="Center" GotFocus="TextBox_GotFocus"/>
			</StackPanel>

			<!-- Calculate Button -->
			<Button Grid.Row="12" Content="Calculate End Point" Width="264" 
                    Style="{StaticResource PrimaryActionButtonStyle}" Margin="154,53,0,32" 
                    Click="CalculateEndPointButton_Click" HorizontalAlignment="Left"/>

			<!-- Coordinate Result -->
			<Border Grid.Row="12" BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="8,96,28,0" Grid.RowSpan="3" Height="82" VerticalAlignment="Top">
				<TextBlock x:Name="CoordinateResultLabel" Text="" FontSize="13" FontWeight="Bold" 
                           TextAlignment="Center" TextWrapping="Wrap" MinHeight="60" Margin="0,0,20,0"/>
			</Border>
		</Grid>
	</ScrollViewer>
</Window>
